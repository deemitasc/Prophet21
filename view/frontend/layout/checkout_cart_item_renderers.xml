<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="checkout_item_price_renderers"/>
    <body>
        <referenceBlock name="additional.product.info">
            <block class="Magento\Checkout\Block\Cart\Item\Renderer"
                   ifconfig="p21/integration/uom_configuration/enable_uom_selection"
                   template="Ripen_Prophet21::cart/items/renderer/uom.phtml"
                   name="cart-checkout-uom"
                   cacheable="false"/>
        </referenceBlock>
    </body>
</page>
